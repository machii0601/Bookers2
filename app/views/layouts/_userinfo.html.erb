<h2>User info</h2>
<table class="table">
  <tbody>
    <tr>
  <%= image_tag user.get_profile_image(100,100) %>
</tr>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>
