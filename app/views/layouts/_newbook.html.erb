<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <div class="form-group">
  <%= label_tag "book_title", "Title" %>
  <%= text_field_tag "book[title]", nil, class: "form-control book_title", id: "book_title" %>
</div>

<div class="form-group">
  <%= label_tag "book_body", "Opinion" %>
  <%= text_area_tag "book[body]", nil, class: "form-control book_body", id: "book_body" %>
</div>

  <div class="form-group">
    <%= submit_tag "Create Book", class: "btn btn-success" %>
  </div>
<% end %>