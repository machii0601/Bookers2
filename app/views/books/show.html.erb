<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<h2>Book detail</h2>
<% if @book.image.attached? %>
  <%= image_tag @book.image, size: "300x300" %>
<% else %>
  <%= image_tag 'no_image', size: "300x300" %>
<% end %>

<p><%= @book.title %></p>
<p><%= @book.body %></p>

<%= link_to "edit", edit_book_path(@book.id) %>
<%= link_to "destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？"　%>
