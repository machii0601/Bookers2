<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/userinfo", user: @user %>
      <%= render "layouts/newbook", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

